{
  "name": "bot-tickets-avanzado-profesional",
  "version": "2.0.0",
  "description": "Sistema Profesional de Tickets para Discord con IA, multiidioma, transcripciones avanzadas, métricas profesionales y dashboard web integrado.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "echo \"Sistema profesional listo para producción\" && exit 0"
  },
  "keywords": [
    "discord",
    "bot", 
    "tickets",
    "support",
    "multilanguage",
    "professional",
    "ai",
    "transcripts",
    "dashboard",
    "metrics"
  ],
  "author": {
    "name": "maestro_oda",
    "url": "https://discord.gg/UNdMhq3Q7X"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maestro-oda/sistema-tickets-profesional"
  },
  "soporte": "https://discord.gg/UNdMhq3Q7X",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "discord-html-transcripts": "^3.2.0",
    "discord.js": "^14.21.0",
    "discord.js-selfbot-v13": "^3.7.0",
    "express": "^5.1.0",
    "fs-extra": "^11.1.0",
    "moment": "^2.29.4",
    "nodemailer": "^6.9.0",
    "chart.js": "^4.2.0",
    "canvas": "^2.11.0",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "eslint": "^8.0.0"
  },
  "features": {
    "multiLanguage": {
      "supported": ["es", "en", "fr", "de", "pt", "it", "ru", "ja"],
      "autoDetection": true,
      "userPreferences": true
    },
    "advancedTranscripts": {
      "formats": ["HTML", "PDF", "TXT", "JSON"],
      "aiSummary": true,
      "searchable": true,
      "metadata": true
    },
    "prioritySystem": {
      "autoDetection": true,
      "slaTracking": true,
      "escalation": true,
      "levels": 4
    },
    "notifications": {
      "discord": true,
      "email": true,
      "webhooks": true,
      "realTime": true
    },
    "dashboard": {
      "web": true,
      "realTimeMetrics": true,
      "charts": true,
      "responsive": true
    },
    "analytics": {
      "advanced": true,
      "exportable": true,
      "trends": true,
      "staffPerformance": true
    }
  }
}
